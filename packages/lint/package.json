{
  "name": "@funish/lint",
  "version": "0.0.3-edge.0",
  "description": "Comprehensive linting solution for code quality and commit messages, with staged files support and Git hooks integration, powered by Funish.",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "lint": "dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepack": "unbuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funish/toolchains.git"
  },
  "keywords": [
    "lint",
    "linter",
    "eslint",
    "stylelint",
    "prettier",
    "commitlint",
    "lint-staged",
    "code-quality",
    "git-hooks",
    "typescript",
    "javascript",
    "css",
    "formatting"
  ],
  "author": {
    "name": "Funish",
    "email": "official@funish.net",
    "url": "https://funish.net/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/funish/toolchains/issues"
  },
  "homepage": "https://github.com/funish/toolchains#readme",
  "dependencies": {
    "@funish/cli": "workspace:*",
    "c12": "2.0.1",
    "consola": "3.4.0",
    "magic-regexp": "0.8.0",
    "micromatch": "4.0.8"
  },
  "devDependencies": {
    "@types/micromatch": "4.0.9"
  }
}
