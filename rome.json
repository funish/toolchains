{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["*/dist/*"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noRedeclare": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5"
    }
  }
}
